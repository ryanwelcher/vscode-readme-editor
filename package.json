{
  "name": "playground-readme-editor",
  "displayName": "playground-readme-editor",
  "description": "An extension to edit README files in WordPress Playground",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wordpress-playground-readme-editor",
          "title": "Block Editor",
          "icon": "public/sidebar-button.svg"
        }
      ]
    },
    "views": {
      "wordpress-playground-readme-editor": [
        {
          "id": "wordpress-playground-readme-editor",
          "name": "",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1"
  }
}
